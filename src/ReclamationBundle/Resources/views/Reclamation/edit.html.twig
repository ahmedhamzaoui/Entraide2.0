    <script>
        $('document').ready(function ()
        {
            $('#reclamationbundle_reclamation_typeobjPerdu').change(function ()
            {
                var x = $( "#reclamationbundle_reclamation_typeobjPerdu" ).val();
                if (x == 'Autre')
                {
                    $('#fio').show();
                }
            });
        });
    </script>
    </div>
    </body>

